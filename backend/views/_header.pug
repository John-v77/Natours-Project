header.header 
  nav.nav.nav--tours 
    a.nav__el(href='/') All tours 
  .header__logo
    a.nav__el(href='/')
      img(src='/img/logo-white.png' alt='Natours logo')
  nav.nav.nav--user
  if user
    a.nav__el(href='/me')
      img.nav__user-img(src=`/img/users/${user.photo || 'default.jpg'}` alt=`Photo of ${user.name}`)

      span= user.name.split(' ')[0]
    a.nav__el.nav__el--logout Log out
  else
    a.nav__el.nav__el--cta(href='/login') Log in
    a.nav__el.nav__el--cta(href='/signup') Sign up


header.header-mobile
  .header__logo-mobile
    a.nav__el(href='/')
      img(src='/img/logo-white.png' alt='Natours logo')
  a.nav__el_title(href='/') All tours 
  .h-menu-mobile
    .hamburger
      span
      span
      span
    .mobile-menu
      a(href='/') All Tours
      if user
        a(href='/me') Account
        a.nav__el--logout Log out
      else
        a(href='/login') Login
        a(href='/signup') Sign up
  